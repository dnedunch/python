a = int(input("Enter the value of first variable 'a': "))
b = int(input("Enter the value of second variable 'b': "))
print("Before swapping:")
print("a =", a)
print("b =", b)
# Swapping the values without using a temporary variable
a = a + b
b = a - b
a = a - b
print("\nAfter swapping:")
print("a =", a)
print("b =", b)

